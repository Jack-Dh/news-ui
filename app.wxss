/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 20rpx;
  box-sizing: border-box;
}

.home {
  padding: 10rpx 20rpx;
  height: 100%;
}

.time {
  color: #d9d6eb;
  font-size: 25rpx;
  display: block;
}

.no-data {
  text-align: center;
  display: flex;
  flex-flow: column;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.no-data-box {
  text-align: center;
}

.no-data-image {
  width: 100rpx;
  height: 100rpx;
}

.no-data-text {
  display: block;
  color: #999999;
}